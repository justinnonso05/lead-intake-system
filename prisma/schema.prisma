generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

enum LeadStatus {
  QUALIFIED
  UNQUALIFIED
}

model Lead {
  id      String  @id @default(cuid())
  name    String
  email   String  @unique
  website String?

  // Enrichment Data
  companyName String?
  companySize String?
  industry    String?
  country     String?

  // Scoring & Status
  score  Int        @default(0)
  status LeadStatus @default(UNQUALIFIED)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


